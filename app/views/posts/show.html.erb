<div class="col-xs-9">
	<div class="col-xs-3">
<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>
<% if @post.errors.any? %>
		  <div id="error_explanation">
		    <h2><%= @post.errors.count %>件のerrorが発生しました。</h2>
		    <ul>
			    <% @post.errors.full_messages.each do |message| %>
					<li><%= message %></li>
		    	<% end %>
		    </ul>
		  </div>
		<% end %>
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<table class="table">
	<tbody>
		<tr>
		  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
	</tbody>
</table>
<div class="row">
	<p><%= link_to "", edit_user_path(@user), class: "glyphicon glyphicon-wrench pull-left btn btn-default btn-block" %>
</p>
</div>
<h2>New Post</h2>
<div class="row">
	<%= form_for(@post) do |f| %>
		<div class="field row">
			<label for="post">post</label>
			<%= f.text_area :body, class:"form-control",　placeholder:"ボディ" %>
		</div>
		<%= f.submit "Create Post", class:"btn btn-primary" %>
	<% end %>
</div>
</div>
		<h3>Post detail</h3>
		<%= @post_tags.each do |tag| %>
		  	<span>
			    link_to tag.tag_name, tag_posts_path(tag_id: tag.id)
			    "(#{tag.posts.count})"
			</span>
		<% end %>
		<table class="table-stripend table">
			<tbody>
				<tr>
					<td>
						<%= link_to user_path(@post.user) do %>
							<%= attachment_image_tag @post.user, :profile_image, size: "40x40", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
							<br>
							<%= @post.user.name %>
						<% end %>
					</td>
					<td><%= @post.body %></td>
					<% if @post.user == current_user %>
						<td><%= link_to "Edit",edit_post_path(@post), class: "btn btn-success" %></td>
						<td><%= link_to "Destroy", post_path(@post), method: :delete,data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %></td>
					<% end %>
				</tr>
			</tbody>
	</table>
</div>